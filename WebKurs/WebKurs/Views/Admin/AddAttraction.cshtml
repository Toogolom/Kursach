@model List<PIS.City>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавление новой достопримечательности</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Добавление новой достопримечательности
                    </div>
                    <div class="card-body">
                        <p>@ViewBag.Message</p>
                        <form asp-controller="Admin" asp-action="AddAttraction" method="post">
                            <div class="form-group">
                                <label for="attractionName">Название:</label>
                                <input type="text" class="form-control" id="attractionName" name="attractionName" placeholder="Введите название">
                            </div>
                            <div class="form-group">
                                <label for="attractionDescription">Описание:</label>
                                <textarea class="form-control" id="attractionDescription" name="attractionDescription" placeholder="Введите описание"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="attractionPhotoUrl">URL фото:</label>
                                <input type="text" class="form-control" id="attractionPhotoUrl" name="attractionPhotoUrl" placeholder="Введите URL фото">
                            </div>
                            <div class="form-group">
                                <label for="cityId">Выберите город:</label>
                                <select class="form-control" id="cityId" name="cityId">
                                    @foreach (var city in Model)
                                    {
                                        <option value="@city.CityId">@city.CityName</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success">Добавить</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
