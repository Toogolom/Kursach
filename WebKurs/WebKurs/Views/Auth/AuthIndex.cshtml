@model UserModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        Вход
                    </div>
                    <div class="card-body">
                        <form asp-controller="Auth" asp-action="Entrance" method="get">
                            <div class="form-group">
                                @if (Model.Error.ContainsKey("Empty"))
                                {
                                    <div class="text-danger">@Model.Error["Empty"]</div>
                                }
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Введите адрес эл.почты">
                                    <label for="floatingInput">Адрес электронной почты</label>
                                </div>
                                @if (Model.Error.ContainsKey("InvalidEmail"))
                                {
                                    <div class="text-danger">@Model.Error["InvalidEmail"]</div>
                                }
                            </div>
                            <div class="form-group">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Введите пароль">
                                    <label for="floatingInput">Пароль</label>
                                </div>
                               
                                @if (Model.Error.ContainsKey("InvalidPassword"))
                                {
                                    <div class="text-danger">@Model.Error["InvalidPassword"]</div>
                                }
                            </div>
                            <div class="form-group">
                                <a href="/Registration/Index" style="--bs-link-opacity: .5">Зарегистрироваться</a>
                            </div>
                            <button type="submit" class="btn btn-outline-success">Войти</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

