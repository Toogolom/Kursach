<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавление нового города</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Добавление нового города
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">
                                @ViewBag.Message
                            </div>
                        }
                        <form asp-controller="City" asp-action="AddCity" method="post">
                            <div class="form-group">
                                <label for="url">Адрес URL:</label>
                                <input type="text" class="form-control" id="URL" name="URL" placeholder="Введите адрес URL">
                            </div>
                            <div class="form-group">
                                <label for="name">Название:</label>
                                <input type="text" class="form-control" id="cityName" name="cityName" placeholder="Введите название">
                            </div>
                            <div class="form-group">
                                <label for="description">Описание:</label>
                                <textarea class="form-control" id="cityDescription" name="cityDescription" placeholder="Введите описание"></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">Добавить</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
