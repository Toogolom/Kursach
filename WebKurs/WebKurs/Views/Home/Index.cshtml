@{
    ViewData["Title"] = "Home Page";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebKurs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebKurs.styles.css" asp-append-version="true" />
    <style>

        #background-carousel {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .content {
            z-index: 1;
        }
    </style>
</head>

<div id="background-carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active position-relative">
           <img src="https://www.rollingstone.com/wp-content/uploads/2020/01/AdobeStock_117789390.jpeg"
            class="d-block w-100" alt="">
            <div class="carousel-caption d-none d-md-block position-absolute top-0 start-50 translate-middle-x" style="margin-top: 5%;">
                @if ((bool)ViewData["IsLoggedIn"])
                {
                    <h1 class="display-4" style="color: black">Добро пожаловать, @ViewData["Username"]!</h1>
                }
                else
                {
                    <h1 class="display-4" style="color: black">Добро пожаловать, путешественник!</h1>
                }
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://sportishka.com/uploads/posts/2022-03/1646335290_6-sportishka-com-p-krasivie-peizazhi-gor-turizm-krasivo-foto-7.jpg" 
            class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block position-absolute top-0 start-50 translate-middle-x" style="margin-top: 5%;">
                <h1 class="display-4" style="color: black">Выбери путешествие под себя!</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://sportishka.com/uploads/posts/2022-03/1646383216_4-sportishka-com-p-pogruzhenie-v-vodu-turizm-krasivo-foto-5.jpg" 
            class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block position-absolute top-0 start-50 translate-middle-x" style="margin-top: 5%;">
                <h1 class="display-4" style="color: black">Окунись в неизведанное</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://m1.online-agent.ru/description/imagescache/2c/2ce1eb0da9da85a5de94e4c6044abbbe.jpg" 
            class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block position-absolute top-0 start-50 translate-middle-x" style="margin-top: 5%;">
                <h1 class="display-4" style="color: black">Или просто отдохни от суеты</h1>
            </div>
        </div>
    </div>
</div>
